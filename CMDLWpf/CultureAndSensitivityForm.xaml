<Window x:Class="CMDLWpf.CultureAndSensitivityForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CULTURE AND SENSITIVITY FORM" Height="202" Width="424" ResizeMode="NoResize">
    <Grid Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Culture and Sensitivity:"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Count: "/>
        <ComboBox Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Width="250" IsEditable="True" Background="LightYellow" Name="cbCultureAndSensitivity" />
        <ComboBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Width="250" IsEditable="True" Background="LightYellow" Name="cbCount" />
        <Button Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Width="80" Content="(+) Add" HorizontalAlignment="Right" Margin="2" Name="btAdd" />
        <Button Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Width="80" Content="OK" HorizontalAlignment="Right" Margin="2" Name="btOK" />
    </Grid>
</Window>
