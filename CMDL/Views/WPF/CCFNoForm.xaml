<Window x:Class="CMDL.CCFNoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CCF No Form" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="5" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="CCF No." Margin="5"/>
        <TextBox Grid.Column="0" Grid.Row="1" Margin="5" FontSize="20" FontWeight="Bold" Background="LightYellow" Name="tbDate"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="5" FontSize="20" FontWeight="Bold" Background="LightYellow" Name="tbNo"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Content="OK" Name="btOK"/>
    </Grid>
</Window>
